<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:background="@drawable/backgroung_cell"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"

            android:background="@android:color/transparent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon_user" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:id="@+id/txt_name"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@color/cyan_800_overlay"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icon_phone" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/txt_user_phone_no"
            android:layout_height="wrap_content"
            android:text="Phone No"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="2dp"
        android:background="@color/cyan_800_overlay"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"


            android:background="@android:color/transparent"
            app:srcCompat="@drawable/time_selection_icon" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginTop="-5dp"
            android:layout_gravity="center"
            android:id="@+id/txt_total_month"
            android:layout_height="wrap_content"
            android:text="Package Month"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cyan_800_overlay"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:id="@+id/image_view_start_end"
            android:src="@drawable/start_date_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/txt_reaming_days"
            android:layout_height="wrap_content"
            android:text="Remaining Days"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_800_overlay"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:id="@+id/image_view_delete"
            android:src="@drawable/delete_icon_2"/>
        <ImageView
            android:layout_width="0dp"
        android:layout_marginLeft="10dp"
            android:id="@+id/image_view_whatsapp_share"
            android:layout_weight="1"
        android:layout_height="39dp"
        android:src="@drawable/whatsapp_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="39dp"
            android:id="@+id/image_view_edit"
            android:src="@drawable/edit_icon"/>
        <ImageView
            android:layout_width="39dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="39dp"
            android:src="@drawable/view_icon"/>
    </LinearLayout>

</LinearLayout>